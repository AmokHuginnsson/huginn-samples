#! /bin/sh
exec huginn -E "${0}" "${@}"
#! huginn

main( argv_ ) {
	badWords = set( "equality", "nurture", "environment" );
	skipOnce = true;
	for ( w : argv_ ) {
		if ( skipOnce ) {
			skipOnce = false;
			continue;
		}
		if ( badWords.has_key( w ) ) {
			print(
				"I wholeheartedly reject {},\n"
				"commie propaganda won't fly here, bye.\n".format( w )
			);
			break;
		}
		print( "I can like this {} thingy :)\n".format( w ) );
	}
	return ( 0 );
}
